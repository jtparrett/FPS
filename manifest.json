{
  "manifest_version": 2,

  "name": "FPS",
  "description": "An FPS Meter",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png"
  },
  
  "permissions": [
   "activeTab"
  ],
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["fps.js"],
    "css": ["fps.css"]
  }],

  "web_accessible_resources": ["handle.png"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}